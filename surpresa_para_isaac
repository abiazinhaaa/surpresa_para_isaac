    <h1>Aceita continuar namorando comigo?</h1>
    <button class="btn" id="yesBtn">Sim</button>
    <button class="btn" id="noBtn">Não</button>

    <div id="finalMessage">EU TE AMO!!! OBRIGADA POR TUDO</div>

    <script>
        const noBtn = document.getElementById('noBtn');
        const yesBtn = document.getElementById('yesBtn');
        const finalMessage = document.getElementById('finalMessage');

        // Faz o botão "Não" se mover
        noBtn.addEventListener('mouseover', () => {
            const offsetX = Math.floor(Math.random() * (window.innerWidth - noBtn.offsetWidth));
            const offsetY = Math.floor(Math.random() * (window.innerHeight - noBtn.offsetHeight));
            noBtn.style.position = 'absolute';
            noBtn.style.left = offsetX + 'px';
            noBtn.style.top = offsetY + 'px';
        });

        // Se clicar em "Sim" ou "Não" se move e exibe as opções finais
        yesBtn.addEventListener('click', () => {
            finalMessage.style.display = 'block';
        });

        noBtn.addEventListener('click', () => {
            noBtn.style.display = 'none';
            yesBtn.innerHTML = "Claro";
            yesBtn.insertAdjacentHTML('afterend', '<button class="btn" id="logicalBtn">Lógico</button><button class="btn" id="obviousBtn">Óbvio</button>');
            document.getElementById('logicalBtn').addEventListener('click', () => finalMessage.style.display = 'block');
            document.getElementById('obviousBtn').addEventListener('click', () => finalMessage.style.display = 'block');
        });
    </script>
</body>
